@model IEnumerable<DeliveryOrderItem>

@{
    ViewData["Title"] = "Delivery Order Items";
}


<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Delivery Order Items</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.DeliveryOrder)</th>
                            <th>@Html.DisplayNameFor(model => model.Item)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reverse())
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td>@Html.DisplayFor(modelItem => item.DeliveryOrder.DeliveryTiming)</td>
                                <td>@Html.DisplayFor(modelItem => item.Item.Description)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.DeliveryOrderItemId" class="btn btn-sm btn-outline-warning rounded-pill me-1">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.DeliveryOrderItemId" class="btn btn-sm btn-outline-info rounded-pill me-1">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
